<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
        <Authors>BlurOne!, Abril Martina da Rocha Yebra</Authors>
        <Description>A web to upload broom designs, especially made for 1600's witches.</Description>
        <PackageProjectUrl>https://blurone-git.github.io/TheBroomWeb</PackageProjectUrl>
        <PackageLicenseUrl>https://github.com/BlurOne-GIT/TheBroomWeb/blob/main/LICENSE</PackageLicenseUrl>
        <RepositoryUrl>https://github.com/BlurOne-GIT/TheBroomWeb</RepositoryUrl>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="8.0.11"/>
        <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" Version="8.0.11" PrivateAssets="all"/>
    </ItemGroup>

    <ItemGroup>
      <Folder Include="wwwroot\fonts\" />
      <Folder Include="wwwroot\svgs\" />
    </ItemGroup>

</Project>
